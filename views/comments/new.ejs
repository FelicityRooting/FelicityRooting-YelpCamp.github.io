<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Add New Comment to <%= campgrounds.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/campgrounds/<%= campgrounds._id %>/comments" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" name="comment[text]" placeholder="text">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="comment[author]" placeholder="author">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-default btn-block btn-primary">Submit</button>
                </div>
                <a href="/campgrounds">Go Back</a>
            </form>
        </div>
    </div>
    
</div>


<% include ../partials/footer %>